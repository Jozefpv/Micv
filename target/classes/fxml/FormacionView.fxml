<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="formacionTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="desdeCol" prefWidth="75.0" text="Desde" />
          <TableColumn fx:id="hastaCol" prefWidth="75.0" text="Hasta" />
            <TableColumn fx:id="denominacionCol" prefWidth="100.0" text="Denominación" />
            <TableColumn fx:id="organizadorCol" prefWidth="75.0" text="Organizador" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addBoton" minWidth="60.0" mnemonicParsing="false" text="Añadir" />
            <Button fx:id="deleteBoton" minWidth="60.0" mnemonicParsing="false" text="Eliminar" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
